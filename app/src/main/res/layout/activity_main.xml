<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgitar"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cara Cepat"
            android:textStyle="bold"
            android:textColor="@color/hijau"
            android:gravity="center"
            android:textSize="40dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="(Belajar Kunci Gitar)"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            android:textSize="40dp"
            android:gravity="center"/>



    <Button
            android:id="@+id/button"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:text="Definisi Gitar"/>
    <Button
            android:id="@+id/button1"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_width="350dp"
            android:textStyle="italic"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="bermain gitar untuk pemulla"/>

    <Button
            android:id="@+id/button2"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="350dp"
            android:textStyle="italic"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:text="cara belajar bergitar"/>
    <Button
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:id="@+id/button4"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="2dp"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:text="KUNCI GITAR"/>

</LinearLayout>